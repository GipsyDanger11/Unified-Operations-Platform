{
    "version": 2,
    "functions": {
        "api/index.js": {
            "includeFiles": "backend/**",
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}